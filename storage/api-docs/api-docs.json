{
    "openapi": "3.0.0",
    "info": {
        "title": "Agence super hero api",
        "version": "0.1"
    },
    "paths": {
        "/api/login": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Log an user",
                "operationId": "loginUser",
                "requestBody": {
                    "description": "User registration data",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password",
                                    "_token"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "User successfully logged",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "User logged successfully"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "The given data was invalid."
                                        },
                                        "errors": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/register": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Register a new user",
                "operationId": "registerUser",
                "requestBody": {
                    "description": "User registration data",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "email",
                                    "password",
                                    "_token"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password"
                                    },
                                    "password_confirmation": {
                                        "type": "string",
                                        "format": "password"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "User successfully registered",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "User registered successfully"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "The given data was invalid."
                                        },
                                        "errors": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/city": {
            "get": {
                "operationId": "c2504917c4da1139bffc3dd1d5409f8f",
                "responses": {
                    "200": {
                        "description": "Display all cities"
                    }
                }
            }
        },
        "/api/city/{id}": {
            "get": {
                "operationId": "5a7b6766b61b35c52ccb43edd7a33259",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of the city",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Display a specific city and its heroes"
                    }
                }
            }
        },
        "/api/guest": {
            "get": {
                "operationId": "f0f74000b26dc33bff25d691fb5ef9fc",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "unauthorized page",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "401": {
                        "description": "Not connected"
                    }
                }
            }
        },
        "/api/hero": {
            "get": {
                "operationId": "df30085c1784aaa94727132391699837",
                "responses": {
                    "200": {
                        "description": "Display all heroes"
                    },
                    "405": {
                        "description": "Not connected"
                    }
                }
            }
        },
        "/api/hero/{id}": {
            "get": {
                "operationId": "d654731c0fa7cbd45d89898b400c557b",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of the hero",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Display a specific hero and his power, transport, city, and team"
                    }
                }
            }
        },
        "/api/power": {
            "get": {
                "operationId": "4fedc55085482d5a4fc20263ebb58daa",
                "responses": {
                    "200": {
                        "description": "Display all powers"
                    }
                }
            }
        },
        "/api/power/{id}": {
            "get": {
                "operationId": "ed9ba669ac7fe798127dfcdde810166d",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of the city",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Display a specific power"
                    }
                }
            }
        },
        "/api/team": {
            "get": {
                "operationId": "8552dd0225e6b98cfd20200cff987939",
                "responses": {
                    "200": {
                        "description": "Display all team"
                    }
                }
            }
        },
        "/api/team/{id}": {
            "get": {
                "operationId": "71327544c30baa9706be0707cfeb2459",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of the city",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Display a specific team and its heroes"
                    }
                }
            }
        }
    }
}